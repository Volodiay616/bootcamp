<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">Sale Order Line Numbers</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position = "before">
                <field name="line_number" />
            </xpath>               
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position = "after">
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='tax_id']" position = "after">
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">Sale Order Line Numbers</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <field name="order_id" position = "after">
                <field name="line_number" />
            </field>               
        </field>
    </record>

    <record id="sale_order_line_action" model="ir.actions.act_window">
        <field name="name">Sale Order Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_so_lines"
        name="Sale Order Lines"
        parent="sale.sale_order_menu"
        action="sale_order_line_action"
        sequence="10"/>

    <record id="sale_order_line_tag_view_tree" model="ir.ui.view">
        <field name="name">Sale Order Line Tags</field>
        <field name="model">sale.order.line.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker" />
            </tree>
        </field>
    </record>    

    <record id="sale_order_line_tag_action" model="ir.actions.act_window">
        <field name="name">Sale Order Line Tags</field>
        <field name="res_model">sale.order.line.tag</field>
        <field name="view_id" ref="sale_order_line_tag_view_tree"/>
    </record>
       
    <menuitem id="menu_so_order_line_tags"
        name="Line Tags"
        parent="sale.menu_sales_config"
        action="sale_order_line_tag_action"
        sequence="3"/>
      

</odoo>
